{
  "name": "wordle-game-service",
  "version": "1.0.0",
  "description": "Game service for Wordle application - handles game logic, word validation, and state management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist coverage",
    "docker:build": "docker build -t wordle-game-service .",
    "docker:run": "docker run -p 3002:3002 wordle-game-service",
    "podman:build": "podman build -t wordle-game-service .",
    "podman:run": "podman run -p 3002:3002 wordle-game-service",
    "swagger": "swagger-jsdoc -d swagger/swagger.json -o swagger/swagger.yaml src/controllers/*.ts",
    "swagger:generate": "swagger-jsdoc -d swagger-config.json -o docs/api.yaml src/controllers/*.ts",
    "swagger:serve": "swagger-ui-serve docs/api.yaml",
    "docs": "npm run swagger:generate && npm run swagger:serve"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.8.0",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
